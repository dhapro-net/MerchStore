@model MerchStore.WebUI.Models.Catalog.ProductDetailsViewModel

@{
    ViewData["Title"] = $"Product Details - {Model.Name}";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<nav class="breadcrumb mt-3">
    <a class="breadcrumb-item" asp-controller="Home" asp-action="Index">Home</a>
    <a class="breadcrumb-item" asp-controller="Catalog" asp-action="Index">Products</a>
    <span class="breadcrumb-item active">@Model.Name</span>
</nav>

<div class="container" style="max-width: 600px;">
    <div class="d-flex justify-content-center align-items-center bg-light overflow-hidden rounded mb-4" style="height: 400px;">
        @if (Model.HasImage)
        {
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
        }
        else
        {
            <img src="https://placehold.co/200x200?text=:(" class="img-fluid" alt="No image available">
        }
    </div>

    <h1 class="product-title mb-3">@Model.Name</h1>
    <p class="product-price text-primary h4 mb-4">@Model.FormattedPrice</p>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <span class="fw-bold @(Model.InStock ? "text-success" : "text-danger")">
            @(Model.InStock ? $"In Stock ({Model.StockQuantity} available)" : "Out of Stock")
        </span>
        <button class="btn btn-primary @(Model.InStock ? "" : "disabled")" @(Model.InStock ? "" : "disabled")>
            Add to Cart
        </button>
    </div>

    <div class="mt-4">
        <h5 class="fw-bold">Description</h5>
        <p class="text-muted">@Model.Description</p>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to Products
        </a>
    </div>
</div>