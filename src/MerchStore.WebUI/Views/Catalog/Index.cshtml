@model MerchStore.WebUI.Models.Catalog.ProductCatalogViewModel

@{
    ViewData["Title"] = "MerchStore - Products";
}

<style>


    .product-image {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-footer {
        padding: 10px;
        background-color: #f9f9f9;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn {
        padding: 5px 10px;
        font-size: 0.9rem;
        text-decoration: none;
        border: 1px solid #007bff;
        border-radius: 4px;
        color: #007bff;
        background-color: white;
        transition: background-color 0.3s, color 0.3s;
    }

    .btn:hover {
        background-color: #007bff;
        color: white;
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 16px;
    }
</style>

<div class="text-center">
    <h1 class="display-4 mb-4">
        @if (Model.FeaturedProducts.Any())
        {
            @($"Product Catalog ({Model.FeaturedProducts.Count()} items)")
        }
        else
        {
            @("Product Catalog")
        }
    </h1>
    <p class="lead mb-5">Merch below!</p>
</div>

@if (Model.FeaturedProducts.Any())
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        @foreach (var product in Model.FeaturedProducts.Where(p => p.InStock)) //Only in stock items are listed
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="d-flex justify-content-center align-items-center bg-light overflow-hidden" style="height: 200px;">
                        @if (product.HasImage)
                        {
                            <img src="@product.ImageUrl" class="img-fluid" alt="@product.Name">
                        }
                        else
                        {
                            <img src="https://placehold.co/200x200?text=:(" class="img-fluid" alt="No image available">
                        }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                    </div>
                    <div
                        class="card-footer @(product.InStock ? "bg-white" : "bg-light") d-flex justify-content-between align-items-center">
                        <span class="text-primary fw-bold">@product.FormattedPrice</span>
                        <div>
                            <a asp-action="Details" asp-route-id="@product.Id"
                                class="btn btn-outline-primary btn-sm @(product.InStock ? "" : "disabled")"
                                title="@(product.InStock ? "" : "Out of Stock")">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center py-5">
        <i class="bi bi-box-seam display-1 text-muted"></i>
        <h2 class="mt-3">No products available</h2>
        <p class="lead">Check back soon for our latest merchandise!</p>
    </div>
}